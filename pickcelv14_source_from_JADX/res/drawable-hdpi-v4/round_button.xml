<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item android:state_pressed="true">
        <shape android:shape="0">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#00ffff" />
            <gradient android:startColor="#00ffff" android:endColor="#1e90ff" android:angle="-90.0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="0">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#00ffff" />
            <solid android:color="#00ffff" />
        </shape>
    </item>
    <item>
        <shape android:shape="0">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#00ffff" />
            <gradient android:startColor="#00ffff" android:endColor="#00ffff" android:angle="-90.0" />
        </shape>
    </item>
</selector>
